<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src=<%=@product.image%> alt="www.google.com" class="img-thumbnail">
      <div class="caption">
        <h3> <%= @product.title%> </h3>
        <div class="container">
              <div class="alert alert-success pull-right hide">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                You gave a rating of <span id="count">0</span> star(s)
              </div>
               <div class="five_star">
               <input name="star2" type="radio" class="star"/> 
               <input name="star2" type="radio" class="star"/> 
               <input name="star2" type="radio" class="star" checked="checked"/> 
               <input name="star2" type="radio" class="star"/> 
               <input name="star2" type="radio" class="star"/> 
              </div>
          </div>
         <h4><%= @product.sale%> </h4>
        <h4> <%= @product.category %> </h4>
        <p><h4><%= @product.description%></h4></p>
          <br>
          <table>
            <tr>
              <td>Subtotal:</td>
              <td><%= number_to_currency(@product.price)%></td>
            </tr>
            <tr>
              <td>Tax:</td>
              <td><%= number_to_currency(@product.sales_tax)%></td>
            </tr>
            <tr>
              <td>Total:</td>
              <td><%= number_to_currency(@product.total)%></td>
            </tr>
          </table>
          <br>
          <%= form_tag "/orders" do %> 
          <%= label_tag :quantity %>
           <%= text_field_tag :quantity %>
           <%= hidden_field_tag :product_id, @product.id%>
           <%= hidden_field_tag :product_id, number_to_currency(@product.price)%>
           <%= hidden_field_tag :product_id, number_to_currency(@product.sales_tax)%>
           <%= hidden_field_tag :product_id, number_to_currency(@product.total)%>
           <%= submit_tag "Buy Now"%>
          <% end %>
        <p><a href="/products/<%= @product.id %>/edit" class="btn btn-primary" role="button">Edit</a> <a href="/products/<%= @product.id %>" data-method="delete" rel="nofollow" data-confirm="Are you sure?" class="btn btn-default" role="button">Delete</a></p>
      </div>
    </div>
  </div>
</div>
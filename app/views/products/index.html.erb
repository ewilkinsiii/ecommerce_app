<h1> Welcome to the Mega Game Trade</h1><br>
<h4>The site where games are rated by gamers<h4> <br>

<div class="row">
  <% @products.each do |product| %>
   <div class="col-sm-8 col-md-4">
     <div class="thumbnail">
      <img src=<%=product.image%> width="100" height "100">
      <div class="caption">
        <h4><%=product.title%></h4>
        <h4>Seller: <%=product.vendor.name%> </h4>
        <h4><%= product.sale%> </h4>
        <p><h4><%=number_to_currency(product.price)%></h4>
        </p>
        <p><a href="#" class="btn btn-primary" role="button">Add to cart</a> <a href="/products/<%= product.id %>" class="btn btn-default" role="button">More Details</a></p>
      </div>
    </div>
  </div>
  <% end%>
</div>


